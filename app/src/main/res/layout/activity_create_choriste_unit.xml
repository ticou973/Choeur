            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView77"
            app:layout_constraintEnd_toEndOf="@+id/et_tel_port_choriste"
            app:layout_constraintStart_toStartOf="@+id/et_tel_port_choriste" />

        <Button
            android:id="@+id/btn_create_choriste_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/secondaryColor"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Créer Choriste in Db."
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_zip_code_choriste" />

        <EditText
            android:id="@+id/et_ville_choriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Votre Ville..."
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/et_adresse_choriste"
            app:layout_constraintStart_toStartOf="@+id/et_adresse_choriste"
            app:layout_constraintTop_toBottomOf="@+id/et_adresse_choriste" />

        <EditText
            android:id="@+id/et_zip_code_choriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Votre Code Postal"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/et_ville_choriste"
            app:layout_constraintStart_toStartOf="@+id/et_ville_choriste"
            app:layout_constraintTop_toBottomOf="@+id/et_ville_choriste" />

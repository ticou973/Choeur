            android:text="Role Admin"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_select_photo_choriste" />

        <RadioGroup
            android:id="@+id/rg_role_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/rg_role_choeur"
            app:layout_constraintStart_toStartOf="@+id/rg_role_choeur"
            app:layout_constraintTop_toBottomOf="@+id/btn_select_photo_choriste">

            <RadioButton
                android:id="@+id/rb_role_admin_aucun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Aucun"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_role_admin_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Administrateur"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_role_admin_president"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Président"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_role_admin_tresorier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Trésorier"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_role_admin_secretaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Secrétaire"
                android:textColor="@android:color/black" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg_role_admin" />

        <EditText
            android:id="@+id/et_create_choriste_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

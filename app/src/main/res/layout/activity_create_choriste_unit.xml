            android:fontFamily="@font/roboto"
            android:text="Pupitre"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView62" />

        <RadioGroup
            android:id="@+id/rg_choriste_pupitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/et_prenom_choriste_create_choriste"
            app:layout_constraintStart_toStartOf="@+id/et_prenom_choriste_create_choriste"
            app:layout_constraintTop_toBottomOf="@+id/et_prenom_choriste_create_choriste">

            <RadioButton
                android:id="@+id/rb_choriste_aucun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Aucun"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_choriste_basse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/bass_value"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_choriste_tenor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/tenor_value"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_choriste_alto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/alto_value"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_choriste_soprano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/soprano_value"
                android:textColor="@android:color/black" />
        </RadioGroup>


            app:layout_constraintTop_toBottomOf="@+id/rg_choriste_pupitre" />

        <RadioGroup
            android:id="@+id/rg_role_choeur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/rg_choriste_pupitre"
            app:layout_constraintStart_toStartOf="@+id/rg_choriste_pupitre"
            app:layout_constraintTop_toBottomOf="@+id/rg_choriste_pupitre">

            <RadioButton
                android:id="@+id/rb_role_choeur_choriste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Choriste"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_role_choeur_chef_choeur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Chef de Choeur"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rb_role_choeur_musicien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Musicien"
                android:textColor="@android:color/black" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView60"
            android:layout_width="101dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Tel. Fixe"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView65" />

        <EditText
            android:id="@+id/et_tel_fixe_choriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Votre Tel. fixe"
            android:inputType="number|phone"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView70"
            app:layout_constraintEnd_toEndOf="@+id/et_create_choriste_email"
            app:layout_constraintStart_toStartOf="@+id/et_create_choriste_email" />

        <TextView
            android:id="@+id/textView74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Tel. Port."
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView70" />

        <EditText
            android:id="@+id/et_tel_port_choriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Votre Tel. port."
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView74"
            app:layout_constraintEnd_toEndOf="@+id/et_tel_fixe_choriste"
            app:layout_constraintStart_toStartOf="@+id/et_tel_fixe_choriste" />

        <TextView
            android:id="@+id/textView75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Photo"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg_role_choeur" />

        <TextView
            android:id="@+id/tv_url_photo_choriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="url photo"
            android:textColor="@android:color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView75"
            app:layout_constraintEnd_toEndOf="@+id/rg_role_choeur"
            app:layout_constraintStart_toStartOf="@+id/rg_role_choeur" />

        <Button
            android:id="@+id/btn_select_photo_choriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/secondaryColor"
            android:fontFamily="@font/roboto"
            android:text="@string/selection"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_url_photo_choriste"
            app:layout_constraintStart_toStartOf="@+id/tv_url_photo_choriste"
            app:layout_constraintTop_toBottomOf="@+id/tv_url_photo_choriste" />

        <TextView
            android:id="@+id/textView77"
            android:layout_width="81dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Adresse"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView74" />

        <EditText
            android:id="@+id/et_adresse_choriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
